<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/breakingNewsFragment">

    <fragment
        android:id="@+id/articleFragment"
        android:name="com.sreshtha.newsnest.ui.fragments.ArticleFragment"
        android:label="ArticleFragment" >
        <argument
            android:name="article"
            app:argType="com.sreshtha.newsnest.model.Article" />
        <action
            android:id="@+id/action_articleFragment_to_searchNewsFragment"
            app:destination="@id/searchNewsFragment" />
        <action
            android:id="@+id/action_articleFragment_to_savedNewsFragment"
            app:destination="@id/savedNewsFragment" />
        <action
            android:id="@+id/action_articleFragment_to_breakingNewsFragment"
            app:destination="@id/breakingNewsFragment" />
        <argument
            android:name="type"
            app:argType="string"
            android:defaultValue="breaking_fragment" />
    </fragment>
    <fragment
        android:id="@+id/savedNewsFragment"
        android:name="com.sreshtha.newsnest.ui.fragments.SavedNewsFragment"
        android:label="SavedNewsFragment" >
        <action
            android:id="@+id/action_savedNewsFragment_to_articleFragment"
            app:destination="@id/articleFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
        <action
            android:id="@+id/action_savedNewsFragment_to_hindiArticleFragment"
            app:destination="@id/hindiArticleFragment" />
    </fragment>
    <fragment
        android:id="@+id/breakingNewsFragment"
        android:name="com.sreshtha.newsnest.ui.fragments.BreakingNewsFragment"
        android:label="BreakingNewsFragment"
        >
        <action
            android:id="@+id/action_breakingNewsFragment_to_articleFragment"
            app:destination="@id/articleFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
        <action
            android:id="@+id/action_breakingNewsFragment_to_hindiArticleFragment"
            app:destination="@id/hindiArticleFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchNewsFragment"
        android:name="com.sreshtha.newsnest.ui.fragments.SearchNewsFragment"
        android:label="SearchNewsFragment" >
        <action
            android:id="@+id/action_searchNewsFragment_to_articleFragment"
            app:destination="@id/articleFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
        <action
            android:id="@+id/action_searchNewsFragment_to_hindiArticleFragment"
            app:destination="@id/hindiArticleFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.sreshtha.newsnest.ui.fragments.SettingsFragment"
        android:label="SettingsFragment" />
    <fragment
        android:id="@+id/hindiArticleFragment"
        android:name="com.sreshtha.newsnest.ui.fragments.HindiArticleFragment"
        android:label="HindiArticleFragment" >
        <action
            android:id="@+id/action_hindiArticleFragment_to_breakingNewsFragment"
            app:destination="@id/breakingNewsFragment" />
        <action
            android:id="@+id/action_hindiArticleFragment_to_savedNewsFragment"
            app:destination="@id/savedNewsFragment" />
        <action
            android:id="@+id/action_hindiArticleFragment_to_searchNewsFragment"
            app:destination="@id/searchNewsFragment" />
        <argument
            android:name="article"
            app:argType="com.sreshtha.newsnest.model.Article" />
        <argument
            android:name="type"
            app:argType="string" />
    </fragment>
</navigation>